<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
			 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                                 http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
			 version="2.0">

	<persistence-unit name="northwind-spring-jpa">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>

		<class>pl.edu.agh.db2.northwind.model.Category</class>
		<class>pl.edu.agh.db2.northwind.model.Customer</class>
		<class>pl.edu.agh.db2.northwind.model.CustomerDemographic</class>
		<class>pl.edu.agh.db2.northwind.model.Employee</class>
		<class>pl.edu.agh.db2.northwind.model.Order</class>
		<class>pl.edu.agh.db2.northwind.model.OrderDetail</class>
		<class>pl.edu.agh.db2.northwind.model.Product</class>
		<class>pl.edu.agh.db2.northwind.model.Region</class>
		<class>pl.edu.agh.db2.northwind.model.Shipper</class>
		<class>pl.edu.agh.db2.northwind.model.Supplier</class>
		<class>pl.edu.agh.db2.northwind.model.Territory</class>

		<exclude-unlisted-classes/>

		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgresPlusDialect"/>
			<property name="hibernate.show_sql" value="false"/>
			<property name="hibernate.format_sql" value="true"/>
			<property name="hibernate.hbm2ddl.auto" value="create-drop"/>
			<property name="hibernate.ejb.naming_strategy" value="org.hibernate.cfg.EJB3NamingStrategy"/>
			<!--<property name="hibernate.cache.provider_class" value="org.hibernate.cache.EhCacheProvider"/>-->
		</properties>
	</persistence-unit>

</persistence>